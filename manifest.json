{
    "manifest_version": 3,
    "name": "Weather App",
    "author": "Vatsal Mittal",
    "version": "1.0.0",
    "description": "A basic extension displaying weather information of the entered city.",
    "icons": {
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "Weather App"
    },
    "host_permissions": [
        "https://api.openweathermap.org/*"
    ]
}